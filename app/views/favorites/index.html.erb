<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th><%=current_user.email%></th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%=@teams.each do |team| %>
  <%=team['city']%>
  <%=team['name']%>
  <%=link_to "Add Favorite", favorites_create_path(city, name), method: :post%>
  <%end%>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user_id %></td>
        <td><%= favorite.city %></td>
        <td><%= favorite.name %></td>
        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', favorite_path(:user_id) %>
