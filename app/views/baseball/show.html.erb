<h1>Baseball#show</h1>
<%='All Your Favorite Teams'%>
<h2>Shows your favorite teams and allows further searches</h2>
<p>Your favorite player search</p>
<%= form_for :player, url: '/player' do |form| %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :lname %>
  </div>

  <div class="field">
    <%= form.label :search %>
    <%= form.text_field :search %>
  </div>

  <div class="field">
    <%= form.label :stat %>
    <%= form.text_field :stat %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<hr>
<p>Your favorite player search</p>
<%= form_for :team, url: '/team' do |form| %>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :search %>
    <%= form.text_field :search %>
  </div>

  <div class="field">
    <%= form.label :stat %>
    <%= form.text_field :stat %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
